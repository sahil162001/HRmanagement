<section class="signup-section position-relative vh-100">
  <h1>Sign Up </h1>
  <%=form_with model: @user do |form|%>
  <%if form.object.errors.any? %>
  <div class ="alert alert-danger">
  <% form.object.errors.full_messages.each do |message|%>
      <div><%=message%></div>
    <%end%>
    </div>
  <%end%>
  <div class=" col-3 mb-3">
  <%= form. label :Name %>
  <%=form.text_field :name, class: "form-control", placeholder: "sahil rathore"%>
  </div>
  <div class=" col-3 mb-3">
  <%= form. label :email %>
  <%=form.text_field :email, class: "form-control", placeholder: "steve@apple.com"%>
  </div>
  <div class=" col-3 mb-3">
  <%= form. label :password %>
  <%=form.text_field :password, class: "form-control", placeholder: "password"%>
  </div>
  <div class=" col-3 mb-3">
  <%= form. label :confirm_password %>
  <%=form.text_field :password_confirmation, class: "form-control", placeholder: "password"%>
  </div>
  
  <div class=" col-3 mb-3">
  <%= form. label :Role %>
  <%= form.select :role, [ 'Employee','HR','Manager']%>
  </div>
  
  <div class=" col-3 mb-3">
    <%= form.submit "Sign Up"%>				<p>Already have an Account? <a href="/sign_in"> Login Now!</a></p>
  </div>
  <%end%>
  <p class=>Hello</p>
</section>