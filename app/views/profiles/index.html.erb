<section class="profile-section position-relative vh-100">
  <div class="bg-text position-absolute top-50 start-50 translate-middle">
    <h3 class="text-white">Welcome  <%= Current.user.name%></h3>
      <% if @profile.present?%>
        <h5 class="text-white text-center">first name : <%= @profile.first_name%></h5>
        <h5 class="text-white text-center">last name: <%=@profile.last_name%></h5>
        <h5 class="text-white text-center">Role: <%=@profile.role%></h5>
        <h5 class="text-white text-center">Skill Set: <%=@profile.skill%></h5>
        <h5 class="text-white text-center">Gender: <%=@profile.gender%></h5>
        <h5 class="text-white text-center">contact: <%=@profile.phone%></h5>
        <h5 class="text-white text-center">Address: <%=@profile.address%></h5>
      <%end%>
    <% if Current.user.profile%>  
      <h5 class = "text-center"><%=link_to "Update",edit_profile_path,class:"btn btn-primary"%></h5><br>
    <%else%>
       <h5 class="text-center"><%= link_to "update", new_profile_path, class:"btn btn-success my-2 btn-lg" %></h5><br>  
    <%end%>
    <h5 class="text-center"><%=link_to "Change Password",edit_password_path,class:"btn btn-primary"%></h5><br>
  </div>
</section>